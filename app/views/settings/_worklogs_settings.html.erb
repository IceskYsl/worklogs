<p>
  <label><%=l(:setting_about_info)%></label>
  <%= text_area_tag 'settings[WORKLOGS_ABOUT]', (settings["WORKLOGS_ABOUT"] || l(:text_worklogs_about)).force_encoding("utf-8"),:cols => 60, :rows => 25 %>
  <br />
  <em><%=l(:setting_about_info_desc)%></em>
</p>

<p>
  <label><%=l(:setting_mail_footer)%></label>
  <%= text_area_tag 'settings[WORKLOGS_MAIL_FOOTER]', (settings["WORKLOGS_MAIL_FOOTER"] || l(:text_worklogs_mail_footer)).force_encoding("utf-8"),:cols => 60, :rows => 15 %>
  <br />
  <em><%=l(:setting_mail_footer_desc)%></em>
</p>